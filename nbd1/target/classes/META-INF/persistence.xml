<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="BABYSITTER" transaction-type="RESOURCE_LOCAL">
    <class>model.Sitter</class>
    <class>model.Housekeeper</class>
    <class>model.Academic</class>
    <class>model.Parent</class>
    <class>model.Child</class>

    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" /> <!-- DB Driver -->
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5431/nbddb" /> <!-- BD Mane -->
      <property name="javax.persistence.jdbc.user" value="nbd" /> <!-- DB User -->
      <property name="javax.persistence.jdbc.password" value="nbdpassword" /> <!-- DB Password -->
    </properties>

  </persistence-unit>
</persistence>
